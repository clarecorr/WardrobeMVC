@model IEnumerable<WardrobeMVC.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center; padding-bottom:25px;">Shoes</h2>

<div class="col-sm-6 col-md-3">
    <div class="thumbnail indexThumbnail" style="padding-top:50px">
        <img src="~/Content/images/hanger.jpg" />
        <div class="caption" style="padding-top:45px">
            <h3>New Shoes</h3>
            <p>
                @Html.ActionLink("Add Shoes", "Create")
            </p>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-3">
        <div class="thumbnail indexThumbnail">
            <img src="@Html.DisplayFor(modelItem => item.ShoePhoto)" />
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.ShoeName)</h3>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ShoeID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ShoeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ShoeID })
                </p>
            </div>
        </div>
    </div>
}


