@model WardrobeMVC.Models.Accessory

@{
    ViewBag.Title = "Details";
}

<div style="text-align:center">
    <h4><img src="@Html.DisplayFor(model => model.AccessoryPhoto)" /></h4>

    <h3>@Html.DisplayFor(model => model.AccessoryName)</h3>

    <h5>Type: @Html.DisplayFor(model => model.AccessoryType)</h5>

    <h5>Color: @Html.DisplayFor(model => model.AccessoryColor)</h5>

    <h5>Occassion: @Html.DisplayFor(model => model.Occasion.OccasionName)</h5>

    <h5>Season: @Html.DisplayFor(model => model.Season.SeasonName)</h5>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.AccessoryID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
