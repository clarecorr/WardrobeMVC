@model WardrobeMVC.Models.Top

@{
    ViewBag.Title = "Details";
}

<div style="text-align:center">
    <h4><img src="@Html.DisplayFor(model => model.TopPhoto)" /></h4>
    
    <h3>@Html.DisplayFor(model => model.TopName)</h3>

    <h5>Type: @Html.DisplayFor(model => model.TopType)</h5>

    <h5>Color: @Html.DisplayFor(model => model.TopColor)</h5>

    <h5>Occassion: @Html.DisplayFor(model => model.Occasion.OccasionName)</h5>

    <h5>Season: @Html.DisplayFor(model => model.Season.SeasonName)</h5>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.TopID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>

