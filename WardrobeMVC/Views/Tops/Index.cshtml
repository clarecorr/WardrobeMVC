@model IEnumerable<WardrobeMVC.Models.Top>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center; padding-bottom:25px;">Tops</h2>


@*<div class="row">*@
@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-3">
        <div class="thumbnail indexThumbnail">
            <img src="@Html.DisplayFor(modelItem => item.TopPhoto)" />
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.TopName)</h3>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TopID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TopID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TopID })
                </p>
            </div>
        </div>
    </div>
}
